{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es2015",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "es2016",
            "dom"
        ]
    },
    "exclude": [
        "node_modules",
        "public"
    ],
    "include": [
        "src/**/*",
        "render/**/*"
    ]
}